// 
//	Preferences set here will override factory (default) settings.
//	This file can be reset using Oryoki > Preferences > Reset.
//
//	Note: this file only accepts comments starting with `//`.
//
{
	// Do not touch!
	"model_version" : "0.2.1",

	// Allows Oryoki to download updates in background
	"download_updates_in_background" : false,

	// Set to false to hide the title bar by default
	"show_title_bar" : true,

	// Automatically adapt color theme
	// when a webpage finished loading 
	"use_color_extraction" : true,

	// Set to false to disable alt+drag to drag windows
	"use_alt_drag" : true,

	// Set to use a URL as homepage
	"homepage_url" : "",

	// Set to false to enable links to open in new windows
	"follow_all_links" : false,

	// Set to false to enable videos to play directly in fullscreen
	"picture_in_picture" : true,

	// Set to false to disable web plugins by default
	"enable_web_plugins" : true,
	
	// Set a custom web plugin path (absolute) here
	"web_plugins_path" : "",

	// Dimensions used for new windows
	"default_window_width" : 800,
	"default_window_height" : 500,

	// Set to true to automatically clear caches
	"clear_caches_on_launch" : false,
	
	// Set a path to save screenshots here
	// If left blank, will save to downloads
	"screenshots_save_path" : "",

	// Set a custom download path (absolute) here
	// If left blank, will use the user's Downloads folder
	"download_path" : "",

	// Hide the status bar
	"hide_status_while_recording" : true,

	// Show the URL in the status bar on hover
	"show_url_preview" : true,

	// Request mobile sites
	"request_mobile_site": false,

	// h264 | prores
	// mp4 is light and lossy
	// prores is big and lossless
	"video_recording_codec" : "h264",

	// Customize Window > Size menu here
	// `widthxheight`
	"window_sizes" : [
		"800x450",
		"1280x800",
		"1920x1080"
	]
}